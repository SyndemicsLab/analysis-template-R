    condition_call_linter = NULL,
    condition_message_linter = NULL,
    consecutive_mutate_linter = NULL,
    expect_identical_linter = NULL,
    implicit_integer_linter = NULL,
    library_call_linter = NULL,
    literal_coercion_linter = NULL,
